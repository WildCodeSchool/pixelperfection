{% extends 'base.html.twig' %}

{% block title %}About Us{% endblock %}

{% block body %}
    <section class="page-section bg-light" id="team">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Meet Our Exceptional PHP Team</h2>
                <h3 class="section-subheading text-muted">Introducing the brilliant minds behind our PHP development.</h3>
            </div>
            <div class="row justify-content-center">
                {% for member in teamMembers %}
                    <div class="card mx-auto" style="width: 20rem;">
                        <img src="{{ asset('build/images/team/' ~ member.id ~ '.jpg') }}" class="card-img-top" alt="{{ member.first_name ~ ' ' ~ member.last_name }}"/>
                        <div class="card-body">
                            <h5 class="card-title">{{ member.first_name ~ ' ' ~ member.last_name }}</h5>
                            <p class="card-text">PHP Developer</p>
                            <p class="card-text">{{ member.bio }}</p>
                            <div class="social-buttons">
                                <a href="{{ member.linkedin }}" class="btn btn-dark btn-social mx-2" aria-label="LinkedIn Profile">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <p class="large text-muted">Get to know the individuals powering our PHP development team and delivering exceptional solutions. Their dedication and expertise drive our success.</p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
